algoritmo "PLACARFUTEBOL"
// Função :
// Autor :
// Data : 29/11/2022
var
golmand,golvisi,cont:inteiro
timemand,timevisi:vetor[0..1] de caractere


inicio
para cont de 0 ate 1 faca
escreval("digite e confirme o nome do time mandante:")
leia(timemand[cont])
escreval("digite e confirme a pontuação do time mandante:")
leia(golmand)
fimpara

para cont de 0 ate 1 faca
escreval("digite e confirme o nome do time visitante:")
leia(timevisi[cont])
escreval("digite e confirme a pontuação do time visitante:")
leia(golvisi)
fimpara

caso 1
se (golmand>golvisi) entao
escreval("O time mandante venceu")
fimse

caso 2
se (golmand<golvisi) entao
escreval("O time visitante venceu.")
fimse

caso 3
se (golmand=golvisi) entao
escreval("Empate na partida.")
fimse
fimescolha


fimalgoritmo
